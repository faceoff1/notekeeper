<div class="card">
  <div class="card-header">
    <h2 class="card-title">Sign up</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control-sm" %>
      </div>

      <div class="form-group">
        <%= f.label :fullname %><br />
        <%= f.text_field :fullname, class: "form-control-sm" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control-sm" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control-sm" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-sm" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up", class: "btn btn-primary mt-3" %>
      </div>
    <% end %>
  </div>

  <div class="card-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
